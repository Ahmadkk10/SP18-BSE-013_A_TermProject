extends layout

block content
  h1 Shopping Cart
  <div id="pnl5"> 
    - var total=0;
      table.table
        thead
          th Name
          th Product Id
          th Price
          th Description
          th Actions
        tbody
          each item in cart
            - total += Number(item.Price)
            tr
              td=item.name
              td=item.pId
              td=item.Price
              td=item.Description
              td
                a(href="/products/cart/remove/"+item._id, class="btn btn-danger") <b>Remove Item</b>
        tfoot
          tr
            td <b>Total Price:</b>
            td= null
            td=total